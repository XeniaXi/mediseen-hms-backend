# MediSeen HMS Backend - Production Environment
# Copy this to .env and fill in your values

# Server
NODE_ENV=production
PORT=8080

# Database - DigitalOcean Managed PostgreSQL
# Get this from DigitalOcean Database dashboard
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# JWT Secrets - Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS - Your frontend domain
CORS_ORIGIN="https://mediseenhms.com,https://www.mediseenhms.com,https://mediseen-hms.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Platform Owner
PLATFORM_OWNER_EMAIL="superadmin@mediseenhms.com"
